<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beyaz"
        tools:context=".Account.AccountActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/profile_root"
            android:layout_height="match_parent">

        <TextView
                android:text="selcukcan95"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ProfilAdiToolbar"
                app:layout_constraintTop_toTopOf="@+id/imgProfileSetting"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textSize="18sp"
                android:textColor="@color/siyah"
                app:layout_constraintBottom_toBottomOf="@+id/imgProf"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_profile_options"
                android:id="@+id/imgProfileSetting"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_discover_people"
                android:id="@+id/imgProf"
                app:layout_constraintEnd_toStartOf="@+id/imgProfileSetting"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <View
                android:layout_width="0dp"
                android:background="@color/golgelik"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:id="@+id/golgelik"
                app:layout_constraintTop_toBottomOf="@+id/imgProf"
                tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_account"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/golgelik"
                app:layout_constraintTop_toBottomOf="@+id/golgelik"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="65"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/siyah"/>
        <TextView
                android:text="4822"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/siyah"/>
        <TextView
                android:text="1452"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/siyah"/>
        <TextView
                android:text="gönderi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gonderi"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3"/>
        <TextView
                android:text="takipçi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/takipci"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <TextView
                android:text="takip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/takip"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/textView5" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <TextView
                android:text="Profili Düzenle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/profileDuzenleButtonu"
                android:padding="6dp"
                android:background="@drawable/edit_profile_bottom_background"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textAlignment="center"
                android:textColor="@color/siyah"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="Selçuk CAN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_name"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"/>
        <TextView
                android:text="Web Design App Developer Instagram Official Account"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/biografi"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:menu="@menu/bottom_navigation_menu"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottomNavigationView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

        </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>
        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/golgelik2"
                android:background="@color/golgelik"
                app:layout_constraintTop_toBottomOf="@+id/homeViewPager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView">

        </View>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar" app:layout_constraintStart_toStartOf="@+id/profile_image"
                app:layout_constraintEnd_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"/>

    </android.support.constraint.ConstraintLayout>


    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/profile_container"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible">

    </FrameLayout>


</android.support.constraint.ConstraintLayout>